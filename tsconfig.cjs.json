{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": false,
    "target": "es2015",
    "outDir": "./src/cjs",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "@types",
    "test"
  ]
}